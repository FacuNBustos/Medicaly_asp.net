@model Medicaly.ModelsView.StaffsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <p>
        Apellido: <input type="text" name="searchLastName" value="@Model.searchLastName"/>
        Especialidad:
        <select name="specialtyID" asp-items="@Model.ListSpecialties">
            <option default value="">Todas</option>
        </select>

        <button type="submit">Filtrar</button>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListStaffs[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListStaffs[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListStaffs[0].Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListStaffs[0].CellNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListStaffs[0].Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListStaffs[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListStaffs[0].Floor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListStaffs[0].Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListStaffs[0].Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListStaffs[0].Specialty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListStaffs[0].Antiquity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListStaffs[0].Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListStaffs)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CellNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Floor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialty.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Antiquity)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Photo))
                {
                    <img src="~/assets/staffs/@item.Photo" class="rounded" style="height:40px" asp-append-version="true" />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_paginador" for="@Model.paginador" />
