@model Medicaly.Models.Specialty

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<div class="row">
    <div class="col-md-4">
        Importar datos desde archivo CSV:
        <form asp-action="Import" enctype="multipart/form-data">
            <div class="form-group">
                <input name="archImportar" id="archImportar" type="file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Importar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h4>Specialty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
